@using Microsoft.Extensions.Options
@using Rhetos.Host.AspNet.HomePage

@{
    Layout = null;
}

@inject IOptions<RhetosHomeViewComponentOptions> homeViewComponentOptions

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h1>Rhetos Home Page</h1>

@foreach (var homeViewComponent in homeViewComponentOptions.Value.HomeViewComponents)
{
	@await Component.InvokeAsync(homeViewComponent);
}

</body>
</html>
